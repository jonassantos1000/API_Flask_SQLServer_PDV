{
  "openapi": "3.0.0",
  "info": {
    "description": "sean",
    "version": "1.0.0",
    "title": "Seans-Python3-Flask-Rest-Boilerplate",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "Cliente",
      "description": "Utilize os endpoints a seguir para validar e conhecer melhor a API"
    }
  ],
  "paths": {
    "/cliente": {
      "get": {
        "tags": [
          "Cliente Request"
        ],
        "summary": "Retorna todos os cliente",
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/components/schemas/bookRequests"
            }
          }
        }
      },
      "post": {
        "tags": [
          "Cliente Request"
        ],
        "summary": "Cria um novo cliente",
        "requestBody": {
          "description": "Objeto cliente para POST",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/clientePost"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "",
            "schema": {
              "$ref": "#/components/schemas/id"
            }
          },
          "400": {
            "description": "JSON INVALIDO"
          }
        }
      }
    },
    "/cliente/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID do cliente que deseja procurar",
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "Cliente Request"
        ],
        "summary": "Retorna o cliente pelo ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Id do cliente",
            "schema": {
              "$ref": "#/components/schemas/id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/components/schemas/clientePost"
            }
          },
          "400": {
            "description": "Id Invalido"
          }
        }
      },
      "put": {
        "summary": "Alterar cliente",
        "tags": [
          "Cliente Request"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID do cliente é necessário",
            "schema": {
              "$ref": "#/components/schemas/id"
            }
          }
        ],
        "requestBody": {
          "description": "Objeto do cliente que se espera receber",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/clientePost"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": ""
          },
          "400": {
            "description": "JSON INVALIDO / ID INVALIDO"
          }
        }
      },
      "delete": {
        "summary": "Delete Book Request by ID",
        "tags": [
          "Book Request"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Book Request Id",
            "schema": {
              "$ref": "#/components/schemas/id"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/id"
            }
          },
          "400": {
            "description": "Failed. Misunderstood Request."
          },
          "404": {
            "description": "Failed. Book Request not found."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "id": {
        "properties": {
          "uuid": {
            "type": "string"
          }
        }
      },
      "clientePost": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "format": "string"
          },
          "endereco": {
            "type": "string",
            "format": "string"
          },
          "telefone": {
            "type": "string",
            "format": "string"
          }
        }
      },
      "bookRequest": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "format": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "timestamp": {
            "type": "string",
            "format": "number"
          }
        }
      },
      "bookRequests": {
        "type": "object",
        "properties": {
          "bookRequest": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/bookRequest"
            }
          }
        }
      }
    }
  }
}